{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "strictNullChecks": true,
